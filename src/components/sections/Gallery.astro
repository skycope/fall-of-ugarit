---
import Section from '../ui/Section.astro';
import FadeIn from '../interactive/FadeIn.jsx';

const images = [
  { src: '/assets/shells.png', alt: 'Decorative shells', span: 'col-span-2 row-span-2' },
  { src: '/assets/ibis.png', alt: 'Sacred ibis', span: 'col-span-1' },
  { src: '/assets/crow.jpg', alt: 'Crow imagery', span: 'col-span-1' },
  { src: '/assets/tern.jpg', alt: 'Tern in flight', span: 'col-span-1' },
  { src: '/assets/wheelchair.jpg', alt: 'Abstract imagery', span: 'col-span-1' },
];
---

<Section id="gallery" padding="lg">
  <div class="max-w-6xl mx-auto">
    <FadeIn client:visible>
      <p class="text-gold font-medium tracking-widest uppercase text-sm mb-4 text-center">
        Visual World
      </p>
    </FadeIn>

    <FadeIn client:visible delay={0.1}>
      <h2 class="font-serif text-4xl md:text-5xl font-medium text-center mb-12 leading-tight">
        Images from the Book's World
      </h2>
    </FadeIn>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {images.map((image, index) => (
        <FadeIn
          client:visible
          delay={0.1 + index * 0.05}
          class={image.span}
        >
          <div class="group relative overflow-hidden rounded-xl h-full min-h-[200px]">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-ink/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</Section>
