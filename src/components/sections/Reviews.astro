---
import Section from '../ui/Section.astro';
import FadeIn from '../interactive/FadeIn.jsx';

// Reviews data - easily updatable
const reviews = [
  {
    quote: "Cope weaves a magical and transporting story that, like Eliot, seems to see everything. This is pared down work, lucid and calm. It must have taken enormous effort to reach such clarity. Writers will know that to write simply is hard work.",
    author: "Karen Schimke",
    role: "Literary Critic"
  },
  {
    quote: "It is also a hopeful book, with a sweetness at its heart that belies its seriousness. It offers perspective: like going outside and looking up at the Milky Way and suddenly realising the true size of your problems.",
    author: "Karen Schimke",
    role: "Literary Critic"
  },
  // Add more reviews here as they come in:
  // {
  //   quote: "Review text here",
  //   author: "Reviewer Name",
  //   role: "Publication or Role"
  // },
];
---

<Section id="reviews" background="ink" padding="xl">
  <div class="max-w-6xl mx-auto">
    <FadeIn client:visible>
      <p class="text-gold font-medium tracking-widest uppercase text-sm mb-4 text-center">
        Praise for the Book
      </p>
    </FadeIn>

    <FadeIn client:visible delay={0.1}>
      <h2 class="font-serif text-4xl md:text-5xl font-medium text-center mb-16 leading-tight text-cream">
        What Readers Are Saying
      </h2>
    </FadeIn>

    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {reviews.map((review, index) => (
        <FadeIn client:visible delay={0.2 + index * 0.1}>
          <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:border-gold/30 transition-colors duration-300">
            <div class="mb-6">
              <svg class="w-10 h-10 text-gold/60" fill="currentColor" viewBox="0 0 24 24">
                <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
              </svg>
            </div>

            <blockquote class="font-serif text-lg md:text-xl leading-relaxed text-cream/90 mb-6">
              "{review.quote}"
            </blockquote>

            <div class="flex items-center gap-3">
              <div class="w-12 h-px bg-gold/40"></div>
              <div>
                <p class="font-medium text-cream">{review.author}</p>
                <p class="text-sm text-cream/60">{review.role}</p>
              </div>
            </div>
          </div>
        </FadeIn>
      ))}
    </div>
  </div>
</Section>
