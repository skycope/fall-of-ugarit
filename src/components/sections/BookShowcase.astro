---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';
import Hero from '../interactive/Hero.jsx';
import FadeIn from '../interactive/FadeIn.jsx';
---

<section class="min-h-screen flex items-center bg-cream pt-8 pb-16 md:py-0">
  <div class="container mx-auto px-6 md:px-8 lg:px-12 max-w-7xl">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Text Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <FadeIn client:visible delay={0}>
          <p class="text-gold font-medium tracking-widest uppercase text-sm mb-4">
            A Novella
          </p>
        </FadeIn>

        <FadeIn client:visible delay={0.1}>
          <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-medium leading-[1.1] mb-6 text-balance">
            The Fall of<br />
            <span class="italic">Ugarit</span>
          </h1>
        </FadeIn>

        <FadeIn client:visible delay={0.2}>
          <p class="text-ink/70 text-lg md:text-xl leading-relaxed max-w-xl mx-auto lg:mx-0 mb-8">
            A meditation on myth, memory, and the fragile nature of loveâ€”set between modern-day False Bay and the ancient Levantine coast.
          </p>
        </FadeIn>

        <FadeIn client:visible delay={0.3}>
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
            <Button href="#buy" variant="primary" size="lg">
              Buy Now
            </Button>
            <Button href="#synopsis" variant="secondary" size="lg">
              Read More
            </Button>
          </div>
        </FadeIn>

        <FadeIn client:visible delay={0.4}>
          <p class="mt-8 text-sm text-ink/50">
            By Michael Cope
          </p>
        </FadeIn>
      </div>

      <!-- Book Cover -->
      <div class="order-1 lg:order-2 flex justify-center">
        <Hero
          client:visible
          imageSrc="/assets/book-cover.png"
          imageAlt="The Fall of Ugarit book cover"
        />
      </div>
    </div>
  </div>
</section>

<!-- Decorative divider -->
<div class="h-px bg-gradient-to-r from-transparent via-gold/30 to-transparent"></div>
