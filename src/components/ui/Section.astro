---
interface Props {
  id?: string;
  class?: string;
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  background?: 'cream' | 'white' | 'ink';
}

const {
  id,
  class: className = '',
  padding = 'lg',
  background = 'cream'
} = Astro.props;

const paddings = {
  sm: 'py-12 md:py-16',
  md: 'py-16 md:py-24',
  lg: 'py-20 md:py-32',
  xl: 'py-24 md:py-40'
};

const backgrounds = {
  cream: 'bg-cream',
  white: 'bg-white',
  ink: 'bg-ink text-cream'
};

const classes = `${paddings[padding]} ${backgrounds[background]} ${className}`;
---

<section id={id} class={classes}>
  <div class="container mx-auto px-6 md:px-8 lg:px-12 max-w-7xl">
    <slot />
  </div>
</section>
